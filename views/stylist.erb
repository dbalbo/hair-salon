<h1><%= @stylist.name() %></h1>

<% if @stylist.clients().any?() %>
  <h3>Here are all the clients in this list:</h3>

  <ul>
    <% @stylist.clients().each() do |client| %>
      <li><%= client.name() %> - due <%= client.due() %> [<a href="/delete_client/<%= client.id()%>">x</a>]</li>
    <% end %>
  </ul>

  <% else %>
    <p>There are no clients in this list!</p>
  <% end %>

<div class="container">
  <a href="/"><button class="btn">Home</a>
</div>

<h3><%= Add a client to <%= @stylist.name() %> </h3>

<form action="/clients" method="post">
  <input id="stylist_id" name="stylist_id" type="hidden" value="<%= @stylist.id() %>">

  <label for="name">Name of the Client:</label>
  <input id="name" name="name" type="text">

  <button type="submit">Add Client</button>
</form>

<hr>

<div class="container">
  <a href="/">Home</a>
  <a href="/stylists">View All Styists</a>
  <a href="/stylists/new">Add New Styist</a>
  <a href="/stylists/new">Add New Client</a>
</div>